export default function normalizeArabic(text) {
  if (!text) return '';

  // Strip short vowels, shadda, sukun, tanween, tatweel
  const withoutDiacritics = text.replace(
    /[\u064B-\u065F\u0670\u0640]/g,
    ''
  );

  // Unify alif/hamza forms to bare alif
  let normalized = withoutDiacritics
    .replace(/[إأٱآ]/g, 'ا')
    // Unify yaa forms (with/without dots) to ي
    .replace(/ى/g, 'ي')
    // Unify taa marbuta to haa if needed for matching
    .replace(/ة/g, 'ه');

  return normalized;
}
